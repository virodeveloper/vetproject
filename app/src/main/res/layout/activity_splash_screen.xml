        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="top|center">

        <ImageView
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/find" />

        <TextView
